{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts"],
  "typedocOptions": {
    "entryPoints": ["src/**/*.ts"],
    "out": "docs"
  }
}
